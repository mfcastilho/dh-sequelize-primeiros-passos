<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css" />

    <style>
      *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
    </style>
  </head>
  <body>
    <figure>
      <img src="/img/logo-DH.png" alt="Logo Digital House" />
    </figure>
    <h1><%= title %></h1>
    <h3 style="margin-bottom: 20px">Bem vindos a <%= title %></h3>
    
    <div class="form-container" style="display: flex; width: 100%;">
      <form action="/actors/search" method="POST" style="display: flex; align-items: flex-end; gap: 5px;">
        <input
          type="text"
          name="character"
          id="character"
          placeholder="search for the character"
          style="
            padding-left: 5px;
            height: 25px;
            font-size: 15px;
            margin-bottom: 10px;
          "
        />
        <button
          type="submit"
          style="
            height: 25px;
            padding: 0 10px;
            background-color: orangered;
            color: #fff;
            border: none;
            cursor: pointer;
            margin-bottom: 10px;
          "
        >
          Search
        </button>
      </form>
  
      <form action="/" method="POST">
        <button type="submit" 
          style="
            height: 25px;
            padding: 0 15.2029px;
            background-color: orangered;
            color: #fff;
            border: none;
            cursor: pointer;
            margin-bottom: 10px;
            margin-left: 5px;
          "
        >
          Clear
        </button> 
      </form>
    </div>
    
    


    <% if(typeof errors != "undefined"){ %>
      <p style="color: red;">errors</p>
    <% }else if(typeof actor != "undefined"){ %>
    <div>
      <h3 style="margin-bottom: 50px;"><%= actor.name %></h3>
    </div>

    <% } %> 
    
    
    
    
    <% if(typeof actors != "undefined"){ %>
    <div style="margin-left: 1.3%">
      <ul>
        <% actors.forEach(actor =>{ %>
        <li>
          <a href="/actors/<%= actor.id %>"> <%= actor.name%> </a>
        </li>
        <% }) %>
      </ul>
    </div>
    <% } %>


  </body>
</html>
